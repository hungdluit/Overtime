<UserControl x:Class="Overtime.RankControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Overtime"
             mc:Ignorable="d"
             d:DesignHeight="150" d:DesignWidth="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" TextAlignment="Center" VerticalAlignment="Center">Rank</TextBlock>
        <TextBlock Grid.Row="1" Name="RankText" FontSize="90" FontStretch="Normal" HorizontalAlignment="Center" VerticalAlignment="Center"
                   Text="{Binding Rank, Mode=Default, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
    </Grid>
</UserControl>